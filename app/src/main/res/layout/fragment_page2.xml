<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Your downloads are empty!"
                android:id="@+id/tv_downloaded_empty"
                android:visibility="invisible"
                android:textSize="24dp"
                android:fontFamily="@font/boldc"
                android:padding="40dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <ListView
            android:id="@+id/listemm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0.3px"
            android:divider="#fff"
            android:clickable="true"
            android:layout_above="@+id/adViewContainer" />


        <LinearLayout

            android:id="@+id/ads_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:visibility="gone"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Showing Ads"
                android:textAlignment="center"
                android:fontFamily="@font/light"

                android:textColor="#fff"
                android:textStyle="bold" />

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                style="@style/AVLoadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:indicatorColor="@color/colorPrimaryDark"
                app:indicatorName="LineSpinFadeLoaderIndicator" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>